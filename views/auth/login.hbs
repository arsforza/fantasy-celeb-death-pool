<div class="phil fullpage container-fluid d-flex flex-column justify-content-top">
  <div class="container mt-5" style="width: 18rem;">
    <form action="/login" method="post">
        <label for="username">username</label>
        <input class="form-control bg-transparent text-white" type="text" name="username">
        <label class="mt-4" for="password">password</label>
        <input class="form-control bg-transparent text-white" type="password" name="password">
        <button class="btn btn-outline-light btn-lg mt-4" type="submit">Login</button>
    </form>
    {{#if err}}
      <div class="alert alert-warning mt-4">{{err}}</div>
    {{/if}}
  </div>
</div>