<h1>Signup</h1>
<form action="/signup" method="post">
  <label for="username">Username</label>
  <input type="text" name="username" id="">
  <label for="password">Password</label>
  <input type="password" name="password" id="">
  <button type="submit">Register</button>
</form>
{{#if message}}
  <p>{{message}}</p>
{{/if}}